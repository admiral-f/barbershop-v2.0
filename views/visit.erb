<h2>Visit us</h2>
<h4>Here your can sign up</h4>
</br>


<form action="/visit" method="POST">    
    <div class="row">
      <div class="col-xs-6">
        <label>Enter your name</label>
        <input type="text" class="form-control" name="client[name]" placeholder="Enter your name" value="<%=@booking.name%>">
      </div>
      <div class="col-xs-6">
        <label>Enter your phone number</label>
        <input type="text" class="form-control" name="client[phone]" placeholder="X-(XXX)-XXX-XX-XX" value="<%=@booking.phone%>">
      </div>
    </div>
    </br>
    <div class="row">
      <div class="col-xs-6">
        <label>Choose your day and time visit</label>
        </br>
        <input class="form-control" placeholder="Enter your date and time" id="datetimepicker" type="text" name="client[datestamp]" value="<%=@booking.datestamp%>">
      </select>
    </div>
      <div class="col-xs-6">
       <label>Choose your barber</label> 
        <select class="form-control" name="client[barber]" >
          <% @barbers.each do |item| %>
            <option <%= @booking.barber == item.name ? 'selected' : '' %>><%= item.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    </br>
    <center>
    <div class="form-group">
      <label>Choose your color for dyeing hair   </label>
    <select id="color" name="client[color]">
        <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>
  </center> 

  

   </br>
    <center>
      <p>
        <button type="submit" class="btn btn-primary btn-lg">Sing in</button>
      </p>
    </center>
</form>

<script type="text/javascript">
  $(function(){
    $('#color').simplecolorpicker();
    $('#datetimepicker').datetimepicker({
       minTime:'10:00',
       maxTime:'22:00'
    });
  });
</script>

